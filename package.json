{
  "name": "constech-worker",
  "version": "1.0.0",
  "description": "Autonomous GitHub project management with Claude Code integration in isolated Docker containers",
  "main": "dist/cli.js",
  "bin": {
    "constech-worker": "dist/cli.js"
  },
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/cli.ts --format esm --target node20 --clean && cp -r templates dist/",
    "dev": "tsup src/cli.ts --format esm --target node20 --watch",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "github",
    "automation",
    "claude-code",
    "project-management",
    "cli",
    "typescript",
    "docker",
    "devcontainer",
    "persistent-volume",
    "git-isolation",
    "autonomous-development",
    "devops"
  ],
  "author": "Christian De Santis",
  "license": "MIT",
  "dependencies": {
    "@octokit/graphql": "^8.1.1",
    "@octokit/rest": "^21.0.2",
    "@types/figlet": "^1.7.0",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.1",
    "figlet": "^1.8.2",
    "ora": "^8.1.0",
    "simple-git": "^3.27.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chalk-animation": "^1.6.3",
    "@types/dockerode": "^3.3.31",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/constech-org/constech-worker.git"
  },
  "bugs": {
    "url": "https://github.com/constech-org/constech-worker/issues"
  },
  "homepage": "https://github.com/constech-org/constech-worker#readme"
}
